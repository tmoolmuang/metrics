<h4><%= @app.name %></h4>
<div class="row"> 
  <div class="col-md-8">
    <p><%= @app.name %> <br />
      <%= @app.url %>
    </p>
  </div>
  <div class="col-md-4">
    <% if user_signed_in? %> 
      <%= link_to "Edit Application", edit_app_path, class: 'btn btn-success' %>
      <%= link_to "Delete Application", @app, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this application?' } %>
    <% end %>
  </div>
</div>
