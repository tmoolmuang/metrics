<div class="row">
  <div class="col-md-1">
  </div>
  <div class="col-md-10 top">
    <h4><%= @app.name %></h4>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <% if app_owner? || admin? %> 
      <%= link_to "Edit Application", edit_app_path, class: 'btn btn-primary' %>
      <%= link_to "Delete Application", @app, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this application?' } %>
    <% end %>
  </div>
  <div class="col-md-1">
  </div>
</div>
<div class="row"> 
  <div class="col-md-1">
  </div>
  <div class="col-md-10 mid">
    <p><%= @app.url %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <% if app_owner? || admin? %> 
      <%= link_to "New Event", new_app_event_path(@app), class: 'btn btn-primary' %>
    <% end %>
    <br /><br />
      <% @events.each do |event| %>
        <div class="media">
          <div class="media-body">
            <h4 class="media-heading">
              <%= link_to event.name, app_event_path(@app, event) %>
            </h4>
            <small>
              submitted <%= time_ago_in_words(event.created_at) %> ago
            </small>
          </div>
        </div>
      <% end %>
    </p>
  </div>
  <div class="col-md-1">
  </div>
</div>
